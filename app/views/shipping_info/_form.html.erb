<%= form_with(model: shipping_info) do |form| %>
    <div class="field">
        <%= form.label :name, "Full Name:", style: "display: block" %>
        <%= form.text_field :name %>
    </div>

    <div class="field">
        <%= form.label :email, "Email:", style: "display: block" %>
        <%= form.text_field :email %>
    </div>

    <div class="field">
        <%= form.label :phone, "Phone:", style: "display: block" %>
        <%= form.text_field :phone %>
    </div>

    <div class="field">
        <%= form.label :address, "Address:", style: "display: block" %>
        <%= form.text_field :address %>
    </div>

    <div class="field">
        <%= form.label :city, "City:", style: "display: block" %>
        <%= form.text_field :city %>
    </div>

    <div class="field">
        <%= form.label :province, "Province:", style: "display: block" %>
        <div class="control">
            <div class="select">
                <%= form.select :province, @taxes.map { |c| [c.name, c.id] }, {:include_blank => true}  %>
            </div>
        </div>
    </div>

    <section class="columns checkout">
        <%= turbo_frame_tag "tax" do %>
        <div class="column submit-form">
            <div id="subtotal">
            <span class="subtotal">Subtotal: <%= number_to_currency @cart.total %> </span>
            </div>
            <% if @tax %>
                <div id="pst">
                <span class="subtotal">Tax: <%= number_to_currency @tax.pst * @cart.total %> </span>
                </div>

                <div id="gst">
                <span class="subtotal">Tax: <%= number_to_currency @tax.gst * @cart.total %> </span>
                </div>

                <div id="total">
                <span class="subtotal">Total: <%= number_to_currency @cart.total * (1 + @tax.pst + @tax.gst) %> </span>
                </div>
            <% end %>
        <% end %>
            <div class="field is-grouped">
                <div class="field is-grouped">
                <div class="control">
                    <%= form.submit "Continue to payment", style: "display: block" %>
                </div>
                <div class="control">
                    <%= link_to "Back to Shopping Cart", cart_path %>
                </div>
                </div>
            </div>
        </div>
    </section>
<% end %>

