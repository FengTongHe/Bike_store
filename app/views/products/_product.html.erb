<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Manufacture:</strong>
    <%= product.manufacture %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= product.style %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <div class="card-image">
      <% if product.image.present? %>
        <figure class="image">
          <%= image_tag product.image %>
        </figure>
      <%end%>
    </div>
  </p>
</div>
