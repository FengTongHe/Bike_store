<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Manufacture:</strong>
    <%= product.manufacture %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= product.style %>
  </p>

  <p>
    <strong>Cost:</strong>
    <%= product.cost %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= product.comment %>
  </p>

</div>
