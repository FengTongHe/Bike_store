<h1>Products</h1>

<section id="products">
  <% @products.each do |product| %>
    <aside>
      <%= render product %>
      <p>
        <%= link_to "Show this product", product %>
      </p>
    </aside>
  <% end %>
</section>

<%= link_to "New product", new_product_path %>
